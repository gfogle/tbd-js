{
    "env": {
        "es6": true,
        "browser": true
    },
    "globals": {
        "i18n": true,
        "require": true
    },
    // 0=off, 1=warning (no fail), 2=error (exit code of 1)
    "rules": {
        "no-console": 2,
        "default-case": 2,
        "indent": [2, "tab"],
        "new-cap": 0,
        "no-catch-shadow": 2,
        "no-eq-null": 2,
        "no-floating-decimal": 2,
        "no-inline-comments": 0,
        "no-nested-ternary": 2,
        "no-param-reassign": 0,
        "quote-props": [2, "as-needed", {"keywords": true, "unnecessary": false}],
        "no-self-compare": 2,
        "no-shadow": 0,
        "no-throw-literal": 2,
        "no-undefined": 0,
        "no-void": 2,
        "semi": 2,
        "space-after-keywords": 2,
        "wrap-iife": [2, "outside"],
        "dot-notation": 0
    },
    "ecmaFeatures": {
        "modules": true
    },
    "plugins": [
    ]
}
